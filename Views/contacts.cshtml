<h1>Genres</h1>
@if (@Model.Count == 0)
{
  <h3>No genres have been added yet!</h3>
}
@foreach (var genre in Model)
{
  <h3><a href='/genres/@genre.GetId()'>@genre.GetGenre()</a></h3>
}
<p><a href='/'>Back home</a></p>

<p><a href="/genres/search">Search by Artist</a></p>


<form action="/genres/cleared" method="post">
  <button type="submit" name="button">Clear All genres</button>
</form>
