@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Contacts</h1>
@if (@Model.Count == 0)
{
  <h3>No contacts have been added yet!</h3>
}
@foreach (var contact in Model)
{
  <h3><a href='/contacts/@contact.GetId()'>@contact.GetName()</a></h3>
}
<p><a href='/'>Back home</a></p>

<form action="/contacts/cleared" method="post">
  <button type="submit" name="button">Clear All Contacts</button>
</form>
